<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Link Icon-->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <!-- link css-->
    <link rel="stylesheet" href="/public/css/dashboard.css" />
  </head>

  <body>
    <div class="container">
      <main>
        <h1>Dashbored</h1>
        <div class="insights">
          <div class="sales">
            <span class="material-symbols-outlined">group</span>
            <div class="middle">
              <div class="left">
                <h1>Users</h1>
              </div>
              <div class="progresss">
                <!-- <svg>
                  <circle cx="38" cy="38" r="36"></circle>
                </svg> -->
                <div class="number">
                  <p><%=countUsers%></p>
                </div>
              </div>
            </div>
          </div>
          <!-- End of Sales -->
          <div class="expenses">
            <span class="material-symbols-outlined">shopping_cart</span>
            <div class="middle">
              <div class="left">
                <h1>Orders</h1>
              </div>
              <div class="progresss">
                <div class="number">
                  <p><%=countOrders%></p>
                </div>
              </div>
            </div>
          
          </div>
          <!-- End of Expenses -->
          <div class="income">
            <span class="material-symbols-outlined">analytics</span>
            <div class="middle">
              <div class="left">
                <h1>Sales</h1>
              </div>
              <div class="progresss">
                <div class="number">
                  <p>$<%=sumOfSales%></p>
                </div>
              </div>
            </div>
          </div>
          <!-- End of Income -->
        </div>
        <!-- End of insights -->
       
      </main>
      <!-- end of main-->
      
      <canvas id="myChart" style="width:90%;max-width:1200px"></canvas>
      <canvas id="pieChart"></canvas>
<script>
const xDate = JSON.parse('<%= X_date %>'); // Parse JSON string
const ySales = JSON.parse('<%= Y_sales %>'); // Parse JSON string

const ctx1 = document.getElementById('myChart').getContext('2d');
    new Chart(ctx1, {
      type: 'line',
      data: {
        labels: xDate,
        datasets: [{
          label: 'Sales',
          data: ySales,
          backgroundColor: 'rgba(0, 123, 255, 0.2)',
          borderColor: 'rgba(0, 123, 255, 1)',
          borderWidth: 0
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: false,
            title: {
              display: true,
              text: 'Sales'
            }
          },
          x: {
            title: {
              display: true,
              text: 'Date'
            }
          }
        }
      }
    });


     // Sample data
     const categoryData = JSON.parse('<%= JSON.stringify(categories.categories) %>'.replaceAll('&#34',"\"").replaceAll(";",""))
    // Extract categories and counts from the data
    const categories = categoryData.map(item => item.category);
    const counts = categoryData.map(item => item.count);

    // Create a chart using Chart.js
    const ctx = document.getElementById('pieChart').getContext('2d');
    new Chart(ctx, {
      type: 'pie',
      data: {
        labels: categories,
        datasets: [{
          data: counts,
          backgroundColor: ['rgba(255, 99, 132, 0.7)', 'rgba(54, 162, 235, 0.7)', 'rgba(255, 205, 86, 0.7)'],
          borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 205, 86, 1)'],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Category Distribution'
          }
        }
      }
    });
</script>
       
    </div>

  </body>
</html>
