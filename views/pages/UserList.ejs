<!DOCTYPE html>
<html lang="en">
<head>
 <style>
    .button {
  display: inline-block;
  padding: 5px 10px;
  background-color: #007bff;
  text-decoration: none;
  color: #fff;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.button:hover {
  background-color: #0056b3;
}
 </style>
</head>
<body>
    <div>
        <h1>Users</h1>
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>IS ADMIN</th>
                <th>ACTIONS</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user) => { %>
                <tr>
                  <td><%= user._id %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.isAdmin ? 'YES' : 'NO' %></td>
                  <td><a href="/user/<%= user._id %>"class="button">Edit</a></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
       
      </div>
</body>
</html>