<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .navigation-button {
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
        margin: 10px 0;
        float: right;
      }

      .navigation-button:hover {
        background-color: #0056b3;
      }
      table {
        width: 100%;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 10px;
        text-align: center;
        border-bottom: 1px solid #ddd;
        max-width: 15px;
        overflow: hidden;
      }

      th {
        background-color: #f2f2f2;
      }

      img {
        width: 100px;
        height: 100px;
        object-fit: cover;
      }

      .delete-btn {
        background-color: #aa0000;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }
      .delete-btn:hover {
        background-color: #ff0000;
      }

      .modify-btn {
        background-color: #157313;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }
      .modify-btn:hover {
        background-color: #1ab417;
      }

      @media (max-width: 768px) {
        .action-col {
          display: none;
        }
        .delete-btn {
          padding: 2px 2px;
        }
        .modify-btn {
          padding: 2px 2px;
        }
      }
    </style>
  </head>
  <body>
    <div class="handle">
      <h2>Display all product</h2>
      <a href="/views/pages/addcard" class="navigation-button">Add New Card</a>
    </div>

    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Price</th>
          <th>Category</th>
          <th class="action-col">Image</th>
          <th>Brand</th>
          <th>Delete</th>
          <th>Modify</th>
        </tr>
      </thead>

      <tbody>
        <% products.forEach((product) => { %>
        <tr>
          <td><%= product._id %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.category %></td>
          <td><%= product.brand %></td>
          <td>
            <a class="delete-btn">Delete</a>
          </td>
          <td>
            <a class="modify-btn">Modify</a>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
    <div>
      <% for (let x = 0; x < pages; x++) { %>
      <a
        class="<%= x + 1 === Number(page) ? 'btn text-bold' : 'btn' %>"
        href="/admin/products?page=<%= x + 1 %>"
      >
        <%= x + 1 %>
      </a>
      <% } %>
    </div>
  </body>
</html>